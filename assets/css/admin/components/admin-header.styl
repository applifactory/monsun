.admin-header
  background: $blue
  color: white
  font-size: 1em
  overflow: hidden
  height: 28px
  line-height: 1.5
  background: $blue
  +size($smallScreen)
    position: fixed
    top: 0
    left: 0
    right: 0
    z-index: 10001
  .left, .right
    margin: 0.3em 1em
  .left
    float: left
    .info
      display: inline-block
      margin: 0 1em
  .right
    float: right
    font-weight: bold
    a
      color: white
      &:hover
        opacity: 0.7
  & + header
    top: 28px
  & ~ main
    padding-top: 108px
