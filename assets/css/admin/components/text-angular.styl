text-angular
  .button, button
    font-size: 12px !important
    background: $blue
    border: none
    padding: 0.4em
    &.active
      background: lighten($blue, 20%)
    &:hover
      background: lighten($blue, 20%)
  [text-angular-toolbar]
    display: none
  &.focussed
    [text-angular-toolbar]
      display: block

  .ta-editor.ta-html, .ta-scroll-window.form-control, .ta-scroll-window>.ta-bind
    min-height: 50px
    padding: 2px

  .ta-scroll-window.form-control
    &:hover
      box-shadow: inset 0 0 1px 1px rgba(99,185,175,.5)


  .ta-root.focussed>.ta-scroll-window.form-control
    outline: none
    box-shadow: inset 0 0 1px 3px rgba(99,185,175,.5)


  .popover-content
    .fa.fa-edit.icon-edit
      &::before
        content: '\e808'
