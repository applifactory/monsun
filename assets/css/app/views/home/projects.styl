.home
  .projects
    background: #C6C7C6
    text-align: center
    padding-bottom: 2em
    cf()
    ul
      list-style: none
      padding: 0
      overflow: hidden
      margin-top: 3em
      li
        font-size: 0.4375em
        margin-bottom: 4em
        +size($smallScreen/3*2)
          col(1/2, cycle: 2)
        +size($smallScreen)
          col(1/3, cycle: 3, uncycle: 2, gutter: 5)
        img
          width: 100%
          display: block
          margin-bottom: 1em
        .name, .description
          text-align: left
        .name
          font-weight: bold
        a:hover
          color: $yellowDark

    .container
      & > a
        clear: both
        display: inline-block
        font-size: 0.75em
