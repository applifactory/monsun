.offer
  ul
    margin: 0
    padding: 0
    list-style: none
    li
      padding: 0
      margin: 5em 0
      .title, .description, .items
        margin: 1em 0
      .title
        color: $gray
        text-transform: uppercase
      .description
        color: $gray
      .items
        color: $grayLight
        line-height: 1.75
    +size($smallScreen)
      li
        width: 30%
        float: left
        margin-top: 0
        margin-right: 5%
        &:nth-child(3n)
          margin-right: 0
