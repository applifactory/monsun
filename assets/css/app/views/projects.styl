.projects
  .list-items
    list-style: nonw
    margin: 0
    padding: 0
    &::after
      content: ''
      display: block
      clear: both
    li
      height: 0
      padding: 0
      padding-bottom: 115%
      margin-bottom: 4%
      display: block
      background: whiteSmoke
      background-size: 100% auto
      position: relative
      img
        width: 100%
      .description
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        background: rgba(0, 0, 0, 0.6)
        color: white
        text-align: center
        box-sizing: border-box
        padding: 70% 1em 1em
        opacity: 0
        transition: opacity 0.2s ease
      &:hover
        .description
          opacity: 1
      +size($smallScreen/2)
        width: 49%
        float: left
        padding-bottom: 55%
        margin-right: 2%
        margin-bottom: 3.2%
        &:nth-child(2n+2)
          margin-right: 0
      +size($smallScreen)
        width: 24%
        padding-bottom: 27.5%
        margin-right: 1.3%
        margin-bottom: 1.3%
        &:nth-child(2n+2)
          margin-right: 1.3%
        &:nth-child(4n+4)
          margin-right: 0
