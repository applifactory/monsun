.studio
  ul.people
    list-style: none
    margin: 0
    padding: 0
    li
      margin-bottom: 3em
      img
        max-width: 100%
        display: block
        margin: 0 auto
      .name
        color: $grayLight
        font-size: (11/$em)
        text-align: center
        +size($smallScreen)
          text-align: left
    +size($smallScreen)
      &::after
        content: ''
        display: block
        clear: both
      li
        float: left
        width: 48%
        margin-bottom: 0
        img
          width: 100%
        &:first-child
          margin-right: 4%
  .description
    margin: 3em auto
    padding: 0 2em
    text-align: center
    max-width: 900px
    +size($smallScreen)
      margin: 0 auto
      padding: 0 1em
      &::after
        content: ''
        display: block
        clear: both
    .column
      margin: 2em auto
      +size($smallScreen)
        float: left
        width: 47%
        margin: 2em auto 0
        &:first-child
          margin-right: 6%

  .tools
    text-align: center
    margin-top: 5em
    margin-bottom: 1em
  testimonials, .testimonials
    display: block
    position: relative
    &::before
      content: ''
      width: 50px
      height: 1px
      background: #636363
      display: block
      margin: 2em auto
    ul
      list-style: none
      margin: 3em 0
      padding: 0
      font-size: 1.3em
      font-weight: 100
      li
        text-align: center
        margin: 1em auto
        padding: 0 20px
        +size($smallScreen)
          padding: 0 100px
        max-width: 600px
        visibility: hidden
        opacity: 0
        position: absolute
        transition: none
        &.active
          visibility: visible
          opacity: 1
          position: relative
          transition: all 0.75s ease
        em, span
          display: block
        span
          font-size: 0.8125rem
          font-weight: bold
          margin-top: 1rem
          &[data-text]
            margin-bottom: 7em
    .prev, .next
      width: 0
      height: 0
      position: absolute
      top: 50%
      border: solid 30px transparent
      opacity: 0.3
      display: none
      +size($smallScreen)
        display: block
      &::after
        content: ''
        display: block
        border: solid 28px transparent
        position: absolute
        top: -28px
        cursor: pointer
      &:hover
        opacity: 1
    .prev
      left: 0
      border-right-color: #636363
      &::after
        border-right-color: white
        left: -26px
    .next
      right: 0
      border-left-color: #636363
      &::after
        border-left-color: white
        left: -30px
    .icon-cancel
      position: absolute
      margin-left: -15px
      left: 50%
      bottom: -35px
      color: $red
      cursor: pointer
      font-size: 20px
      &:hover
        color: lighten($red, 20%)
