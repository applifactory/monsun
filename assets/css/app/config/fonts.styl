$em = 13em

@font-face
  font-family: 'bebas-neue-web'
  src: url('../font/bebasneue_book-webfont.eot')
  src: url('../font/bebasneue_book-webfont.eot?#iefix') format('embedded-opentype'), url('/bebasneue_book-webfont.woff2') format('woff2'), url('/font/bebasneue_book-webfont.woff') format('woff'), url('/font/bebasneue_book-webfont.ttf') format('truetype'), url('/font/bebasneue_book-webfont.svg#bebas_neuebold') format('svg')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'bebas-neue-web'
  src: url('../font/bebasneue_bold-webfont.eot')
  src: url('../font/bebasneue_bold-webfont.eot?#iefix') format('embedded-opentype'), url('/bebasneue_bold-webfont.woff2') format('woff2'), url('/font/bebasneue_bold-webfont.woff') format('woff'), url('/font/bebasneue_bold-webfont.ttf') format('truetype'), url('/font/bebasneue_bold-webfont.svg#bebas_neuebold') format('svg')
  font-weight: bold
  font-style: normal

body
  font-family: 'Helvetica', sans-serif
  font-size: ($em)px
  line-height: 1.4
  color: $gray

h1, h2, h3
  font-weight: normal
  text-align: center

a
  color: $gray
  text-decoration: none
  &:hover
    color: lighten($gray, 20%)
