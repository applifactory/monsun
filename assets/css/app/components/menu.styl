.menu
  nav
    border-bottom: solid 3px #EDEDED
    ul
      list-style: none
      margin: 0.5em 1em 1em
      padding: 0
      li
        a
          color: $gray
          text-decoration: none
          &:hover
            color: $yellow
        &.active
          a
            color: $yellow
  +size($smallScreen)
    position: absolute
    right: 0
    top: 0
    font-size: 0.65625em
    nav
      border-bottom: none
      ul
        margin: 0
        li
          display: inline-block
          padding: 0.4em 1em
