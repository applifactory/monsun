.slider
  display: none
  position: relative
  +size($smallScreen)
    display: block
    min-height: 700px
    .slide
      background-position: center center
      background-size: cover
      overflow: hidden
      position: absolute
      top: 0
      left: 0
      right: 0
      opacity: 0
      visibility: hidden
      z-index: 1
      transition: all 0.3s ease
      height: 700px
      background-position: center
      background-size: cover
      text-align: center
      &:nth-child(1)
        background-image: url(../slide1.jpg)
      &:nth-child(2)
        background-image: url(../slide2.jpg)
      &:nth-child(3)
        background-image: url(../slide3.jpg)
      h1
        color: white
        background: $gray
        display: inline
        line-height: 1.2
        font-size: 1.21em
        box-shadow: -0.2em 0 0 $gray
        span
          background: $orange
          padding: 0 0.2em
      h2
        color: white
        font-size: 2.2em
        text-shadow: 0 0 15px rgba($gray, 0.75)
      a
        display: block
        position: absolute
        left: 0
        right: 0
        top: 0
        bottom: 0
      .content
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        width: 750px
      &.active
        opacity: 1
        visibility: visible
        z-index: 2

  .nav
    position: absolute
    bottom: 10px
    left: 0
    right: 0
    text-align: center
    list-style: none
    margin: 0
    padding: 0
    z-index: 3
    li
      display: inline-block
      width: 130px
      height: 9px
      overflow: hidden
      text-indent: -100px
      cursor: pointer
      margin: 6px
      background: white
      &.active, &:hover
        background: $orange
