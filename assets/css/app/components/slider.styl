.slider
  position: relative
  .slide
    height: 0
    padding-bottom: 42.5%
    img
      width: 100%
  .nav
    list-style: none
    margin: 0
    padding: 0
    position: absolute
    bottom: 10px
    left: 50%
    transform: translate(-50%, 0)
    li
      display: inline-block
      border: solid white 2px
      overflow: hidden
      cursor: pointer
      width: 10px
      height: 10px
      text-indent: -1000px
      margin: 3px
      &.active, &:hover
        background: white
