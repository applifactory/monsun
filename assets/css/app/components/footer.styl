footer
  +size($smallScreen)
    position: absolute
    bottom: 0
    right: 0
    left: 0
    z-index: 10000
    background: white
    margin: 0 !important
    transition: background 0.4s ease
    .container
      margin-bottom: 0
    &:hover
      background: rgba(255, 255, 255, 0.95)
  &::after
    content: ''
    display: block
    clear: both
  .socials
    list-style: none
    margin: 10px 0 20px
    padding: 0
    text-align: center
    li
      padding: 0
      display: inline-block
      vertical-align: middle
      margin: 0 10px
      a
        display: block
        overflow: hidden
        text-indent: -1000px
        &:hover
          filter: brightness(0.8)
        &.twitter
          background: url(../twitter.png) no-repeat
          background-size: contain
          width: 23px
          height: 19px
        &.pinterest
          background: url(../pinterest.png) no-repeat
          background-size: contain
          width: 17px
          height: 22px
    +size($smallScreen)
      float: left
      margin: 12px 0 20px
      li
        margin: 0 30px 0 0

  ul[role="navigation"]
    list-style: none
    margin: 0
    padding: 0
    text-align: center
    li
      padding: 0
      display: block
      font-family: 'bebas-neue-web', sans-serif
      font-weight: bold
      text-transform: uppercase
      font-size: (19/$em)
      margin: 10px
      a
        color: #ccc
        &:hover
          color: darken(#ccc, 20%)
      &.active
        a
          color: $gray
    +size($smallScreen)
      float: right
      li
        display: inline-block
        margin: 10px 0 10px 60px
