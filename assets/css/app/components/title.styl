.title
  overflow: hidden
  position: relative
  &::before
    content: ''
    display: block
    position: absolute
    background: #EDEDED
    right: 0
    top: 0
    left: 0
    bottom: 0
    z-index: -2
  h2
    @extend .container
    text-align: left
    background: url(../logo-title.png) no-repeat left
    height: 192px
    margin: 0 auto
    font-size: 3.25em
    font-weight: normal
    box-sizing: border-box
    padding: 0.15em 0 0 1.45em
    position: relative
    &::before, &::after
      content: ''
      display: block
      position: absolute
      right: 100%
      top: 0
      width: 1000px
      margin-right: -39px
      bottom: 0
      background: $orange
      z-index: -1
    &::after
      bottom: 173px
      margin-right: -78px
