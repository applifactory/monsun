button(color = black, altColor = white)
  color: color
  border: color 1px solid
  background: none
  font-size: 1em
  padding: 0.75em 1.5em
  display: inline-block
  width: auto
  line-height: 1.4
  box-sizing: border-box
  border-radius: 0.3em
  cursor: pointer
  height: auto
  margin: 0.15em
  vertical-align: middle
  text-decoration: none
  transition: color 0.2s ease, border 0.2s ease, background 0.2s ease, opacity 0.2s ease
  &:focus
    outline: none
    box-shadow: inset 0 0 0 1px darken(color, 5%)
  &:hover, &:focus
    color: lighten(color, 20%)
    border-color: lighten(color, 20%)
  &:active
    color: darken(color, 5%)
    border-color: darken(color, 5%)
  &.block
    display: block
    text-align: center
    margin-left: 1px
    margin-right: 1px
    width: 100%
  &.small
    font-size: 0.9em
    padding: 0.25em 0.65em
  &.fill
    color: altColor
    border-color: color
    background: color
    &:hover, &:focus
      color: altColor
      border-color: lighten(color, 20%)
      background: lighten(color, 20%)
    &:active
      color: altColor
      border-color: darken(color, 5%)
      background: darken(color, 5%)
  &.disabled
    cursor: default
    color: darken(color, 20%)
    border-color: darken(color, 20%)
    opacity: 0.5
    &:focus
      box-shadow: none
    &:hover, &:focus, &:active
      color: darken(color, 10%)
      border-color: darken(color, 10%)
    &.fill
      color: darken(altColor, 10%)
      border-color: darken(color, 10%)
      background: darken(color, 10%)
      &:hover, &:focus, &:active
        color: darken(altColor, 10%)
        border-color: darken(color, 10%)
        background: darken(color, 10%)

.button, button, input[type=submit], submit
  button(defaultColor)
  &.primary
    button(primaryColor)
  &.info
    button(infoColor)
  &.success
    button(successColor)
  &.warning
    button(warningColor)
  &.danger
    button(dangerColor)
