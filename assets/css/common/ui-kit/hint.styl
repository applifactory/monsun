[hint]
  color = black
  position: relative
  &::before
    content: ''
    position: absolute
    width: 0
    height: 0
    border-left: 0.5em solid transparent
    border-right: 0.5em solid transparent
    border-bottom: 0.5em solid color
    top: 100%
    left: 50%
    transform: translate(-50%, 0.1em)
    z-index: 112
  &::after
    content: attr(hint)
    background: color
    color: white
    display: block
    position: absolute
    top: 100%
    left: 50%
    font-size: 1em
    padding: 0.75em
    border-radius: 0.35em
    transform: translate(-50%, 0.5em)
    z-index: 111
  &::before, &::after
    opacity: 0
    transition: opacity 0.3s ease
    visibility: hidden
  &.error, .error &
    &::before
      border-bottom-color: darken(dangerColor, 10%)
    &::after
      background: darken(dangerColor, 15%)
  &:hover, &:focus
    &::before, &::after
      opacity: 1
      visibility: visible
