input, select, textarea, .ta-text.ta-editor
  background-color: #FFF
  border: 1px solid borderColor
  border-radius: 0.3em
  box-shadow: none
  color: #444
  line-height: 1.3
  box-sizing: border-box
  display: block
  width: 100%
  font-size: 1em
  padding: 0.5em 0.75em
  margin: 0.15em 0
  vertical-align: middle
  &:focus
    outline: none
    border-color: lighten(primaryColor, 35%)
  &.error, .error &
    color: dangerColor
    border-color: dangerColor !important
input, select
  height: 38px
  &[type=checkbox]
    display: inline-block
    width: 20px
    height: 22px
    margin: 0px 3px 3px 0
.ta-text.ta-editor
  padding: 0
